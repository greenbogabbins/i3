# reload the configuration file
bindsym $mod+Shift+C reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym left resize shrink width 10 px or 10 ppt
        bindsym 116 resize grow height 10 px or 10 ppt
        bindsym 111 resize shrink height 10 px or 10 ppt
        bindsym 114 resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        # status_command i3status
        # status_command $HOME/.i3/i3-conky.sh
        status_command conky -c $HOME/.i3/conkyrc
        # status_command $HOME/bin/dz-conky.sh
        position top
        # mode hide
        colors {
            background #0D080F
            statusline #9898C8
        # class            	       border 		backgrd 	 text
			focused_workspace     #0D080F 		#0D080F 	#5D37AA
			active_workspace      #0D080F 		#0D080F 	#9898C8
			inactive_workspace    #0D080F 		#0D080F 	#9898C8
			urgent_workspace      #0D080F 		#0D080F 	#d70a53
        }
}

# volume key bindings
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer set Master 5%- unmute
bindsym XF86AudioMute exec amixer set Master toggle

# mpd key bindings
set $mpd_socket ~/.mpd/socket
bindsym XF86AudioStop exec --no-startup-id mpc -h $mpd_socket stop
bindsym XF86AudioPlay exec --no-startup-id mpc -h $mpd_socket toggle
bindsym XF86AudioNext exec --no-startup-id mpc -h $mpd_socket next
bindsym XF86AudioPrev exec --no-startup-id mpc -h $mpd_socket prev

